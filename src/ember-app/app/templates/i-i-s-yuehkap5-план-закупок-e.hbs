<h3 class="ui header">{{t "forms.i-i-s-yuehkap5-план-закупок-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-yuehkap5-план-закупок-e.датаНачала-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаНачала
      class=(if (v-get validationModel "датаНачала" "isInvalid") "error")
      data-test-i-i-s-yuehkap5-план-закупок-e-датаНачала=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаНачала" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.организации.организация
      class=(if (v-get validationModel.организации "организация" "isInvalid") "error")
      label=(t "forms.i-i-s-yuehkap5-план-закупок-e.организации.организация-caption")
      data-test-i-i-s-yuehkap5-план-закупок-e-организации-организация=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.организации "организация" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=true
      value=model.склады.склад
      class=(if (v-get validationModel.склады "склад" "isInvalid") "error")
      label=(t "forms.i-i-s-yuehkap5-план-закупок-e.склады.склад-caption")
      data-test-i-i-s-yuehkap5-план-закупок-e-склады-склад=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel.склады "склад" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-yuehkap5-план-закупок-e.план-caption"}}</label>
    {{flexberry-groupedit
      componentName="планGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.план
      content=model.план
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "план" "isInvalid") "error")
      data-test-i-i-s-yuehkap5-план-закупок-e-план=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "план" "message")}}
  </div>
</form>
